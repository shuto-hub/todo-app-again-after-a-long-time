<header class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav class="navbar">
      <div class="container-fluid">
        <button class="navbar-toggler bg-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul id="navbar-menu" class="nav navbar collapse navbar-collapse navbar-expand-lg ms-auto d-flex">
              <li><%= link_to "Home",    root_path, class: "nav-link text-secondary" %></li>
              <li><%= link_to "Help",    help_path, class: "nav-link text-secondary" %></li>
              <% if logged_in? %>
                <li><%= link_to "Users", users_path, class: "nav-link text-secondary" %></li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle text-secondary" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Account
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><%= link_to "Profile", current_user, class: "dropdown-item" %></li>
                    <li><%= link_to "Settings", edit_user_path(current_user), class: "dropdown-item" %></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                      <%= link_to "Log out", logout_path, data: { "turbo-method": :delete }, class: "dropdown-item" %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li class="nav-item"><%= link_to "Log in", login_path, class: "nav-link text-secondary" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </div>
</header>